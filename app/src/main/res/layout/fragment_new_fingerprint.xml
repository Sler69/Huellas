<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/nuevaHuella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="Nueva Huella"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/scan"
        android:layout_width="184dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="124dp"
        android:onClick="startScan"
        android:text="Escanear Huella" />

    <ImageView
        android:id="@+id/ivFingerDisplay"
        android:layout_width="384dp"
        android:layout_height="290dp"
        android:layout_below="@+id/nuevaHuella"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="Scanned fingerprint"
        android:scaleType="fitXY"
        tools:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/ivFingerDisplay"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>