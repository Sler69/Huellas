<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comparison_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comparison_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/comparison1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comparison_title"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/comparison2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comparison1_name"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/percentage_comparison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comparison2_name"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/comparison_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:textSize="17sp" />


</RelativeLayout>